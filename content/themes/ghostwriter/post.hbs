{{!< default}}

<div class="container">
    {{#post}}
        <article class="{{post_class}}">
            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>

                <p class="post-date"><time datetime="{{published_at}}">Published {{date format="MMMM Do YYYY"}}</time></p>
            </header>

            <div class="post-content">
                {{{content}}}
            </div>
        </article>
    {{/post}}
</div>